<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseResultActivity">

    <ImageButton
        android:id="@+id/btn_stein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stein"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_papier" />

    <ImageButton
        android:id="@+id/btn_papier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/papier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_schere"
        app:layout_constraintStart_toEndOf="@+id/btn_stein"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_schere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/schere"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_papier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_winner"
        android:layout_height="50dp"
        android:layout_width="0dp"
        android:textSize="24sp"
        android:text="Choose!"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_papier"
        app:layout_constraintEnd_toEndOf="@+id/btn_papier"
        app:layout_constraintStart_toStartOf="@+id/btn_papier"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>